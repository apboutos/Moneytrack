<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="493dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CalendarView

            android:id="@+id/calendar_dialog_calendarView"
            android:layout_width="match_parent"
            android:layout_height="452dp"
            android:weekSeparatorLineColor="@color/dark_oily_green"
            android:weekNumberColor="@color/dark_oily_green"
            android:selectedDateVerticalBar="@color/light_oily_green"
            android:selectedWeekBackgroundColor="@color/colorInvisible"
            android:focusedMonthDateColor="@color/light_oily_green"
            android:unfocusedMonthDateColor="@color/dark_oily_green"
            android:visibility="visible" />


        <Button
            android:id="@+id/calendar_dialog_pickDayButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/light_oily_green"
            android:text="Pick Day" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>