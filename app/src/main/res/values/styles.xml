<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorOnPrimary">@color/dark_cyan</item>
        <item name="colorAccent">@color/dark_cyan</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/dark_cyan</item>

        <item name="android:itemTextAppearance">@style/menuTextStyle</item>

    </style>
    
    <style name="menuTextStyle" parent="android:TextAppearance.Material">
      <item name="android:textColor">@color/dark_oily_green</item>
    </style>

    <style name="floatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/dark_grey</item>
        <item name="android:shadowColor">@color/light_black</item>
        <item name="android:iconTint">@color/dark_oily_green</item>
        <item name="android:tint">@color/dark_oily_green</item>
        <item name="iconTint">@color/dark_oily_green</item>
        <item name="iconSize">30dp</item>
    </style>

    <style name="ReportLabels">
        <item name="android:textColor">@color/dark_oily_green</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SearchLabels">
        <item name="android:textColor">@color/dark_oily_green</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SearchFields">
        <item name="android:textColor">@color/light_oily_green</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ReportSum">
        <item name="android:textColor">@color/light_oily_green</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="dateButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
    </style>
</resources>